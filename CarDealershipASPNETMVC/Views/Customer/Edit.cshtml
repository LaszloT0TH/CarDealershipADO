@model CarDealershipASPNETMVC.Models.CustomerModel
@{
}
<br />
<h2>Edit Kunde</h2>

<form method="post" action="Edit" class="mt-5">
     <div class="row-mb3">
        <label class="col-sm3 col-form-label">@Html.DisplayNameFor(model => model.CustomerId)</label>
        <div class="col-sm6">
            <input type="number" class="form-control" asp-for="CustomerId" readonly>
        </div>
    </div>
    <div class="row-mb3">
        <label class="col-sm3 col-form-label">@Html.DisplayNameFor(model => model.FirstName)</label>
        <div class="col-sm6">
            <input type="text" class="form-control" asp-for="FirstName">
        </div>
    </div>
    <div class="row-mb3">
        <label class="col-sm3 col-form-label">@Html.DisplayNameFor(model => model.LastName)</label>
        <div class="col-sm6">
            <input type="text" class="form-control" asp-for="LastName">
        </div>
    </div>
    <div class="row-mb3">
        <label class="col-sm3 col-form-label">@Html.DisplayNameFor(model => model.SexName)</label>
        <div >
                 @Html.DropDownListFor(model => model.SexName, new SelectList( ViewBag.Sex, "SexName", "SexName"))                
        </div>
    </div>
    <div class="row-mb3">
        <label class="col-sm3 col-form-label">@Html.DisplayNameFor(model => model.Street)</label>
        <div class="col-sm6">
            <input type="text" class="form-control" asp-for="Street">
        </div>
    </div>
    <div class="row-mb3">
        <label class="col-sm3 col-form-label">@Html.DisplayNameFor(model => model.House_Number)</label>
        <div class="col-sm6">
            <input type="text" class="form-control" asp-for="House_Number">
        </div>
    </div>
    <div class="row-mb3">
        <label class="col-sm3 col-form-label">@Html.DisplayNameFor(model => model.PostalCode)</label>
        <div class="col-sm6">
            <input type="number" class="form-control" asp-for="PostalCode">
        </div>
    </div>
    <div class="row-mb3">
        <label class="col-sm3 col-form-label">@Html.DisplayNameFor(model => model.Location)</label>
        <div class="col-sm6">
            <input type="text" class="form-control" asp-for="Location">
        </div>
    </div>
    <div class="row-mb3">
        <label class="col-sm3 col-form-label">@Html.DisplayNameFor(model => model.CountryName)</label>
          <div>
                @Html.DropDownListFor(model => model.CountryName, new SelectList( ViewBag.Country, "CountryName", "CountryName"))               
          </div>
    </div>
    <div class="row-mb3">
        <label class="col-sm3 col-form-label">@Html.DisplayNameFor(model => model.DateOfBirth)</label>
        <div class="col-sm6">
            <input type="date" class="form-control" asp-for="DateOfBirth">
        </div>
    </div>
    <div class="row-mb3">
        <label class="col-sm3 col-form-label">@Html.DisplayNameFor(model => model.TelNr)</label>
        <div class="col-sm6">
            <input type="tel" class="form-control" asp-for="TelNr">
        </div>
    </div>
    <div class="row-mb3">
        <label class="col-sm3 col-form-label">@Html.DisplayNameFor(model => model.Email)</label>
        <div class="col-sm6">
            <input type="text" class="form-control" asp-for="Email">
        </div>
    </div>
<br />
    <button type="submit" class="btn-primary">Submit</button>
</form>